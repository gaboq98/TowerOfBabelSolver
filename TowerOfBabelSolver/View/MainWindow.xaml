<Window x:Class="TowerOfBabelSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TowerOfBabelSolver"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="babel.jpg"/>
        </Grid.Background>
        <Label Content="Solucionador Torre de Babilonia" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" FontSize="48" Margin="155,0,144.6,0" Width="694" Foreground="White">
            <Label.Effect>
                <DropShadowEffect Color="#FFE4CB35" BlurRadius="6"/>
            </Label.Effect>
        </Label>

    </Grid>
</Window>
